@model IEnumerable<UsedCarDealer.Domain.Entities.Car>

@{
    ViewBag.Title = "Panel administracyjny";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <h3>Wszystkie produkty</h3>
</div>
<div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>ID</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Typ paliwa</th>
            <th>Rok produkcji</th>
            <th>Typ nadwozia</th>
            <th>Przebieg w km</th>
            <th class="NumericCol">Cena</th>
            <th>Akcje</th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CarID</td>
                <td>@Html.ActionLink(item.CarBrand, "Edit", new { item.CarID }) </td>
                <td>@item.CarModel</td>
                <td>@item.FuelType</td>
                <td>@item.YearProduction</td>
                <td>@item.TypeCar</td>
                <td>@item.Milage</td>
                
                <td class="NumericCol">@item.Price</td>
                <td>
                    @using (Html.BeginForm("Delete", "Admin"))
                    {
                        @Html.Hidden("CarID", item.CarID)
                        <input type="submit" value="Usuń"/>
                    }
                </td>
            </tr>
        }

    </table>
</div>
<div class="panel-footer">
    @Html.ActionLink("Dodaj nowy samochód", "Create", null,
    new { @class = "btn btn-default"})
</div>

